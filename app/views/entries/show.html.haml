- title (page_title = @entry.term_in_glossary_language)
.page-header
  %h1
    = page_title
    - if logged_in?
      - if @entry.approved?
        %span.btn.btn-success.btn-mini APPROVED
      - else
        %span.btn.btn-warning.btn-mini UNAPPROVED
  - if @entry.changeable_by?(@current_user)
    .clearfix{ :style => "padding: 10px 2px" }
      #{@current_user.role.capitalize} functions:
      = link_to 'Edit', edit_entry_path(@entry)
      |
      = link_to 'Delete', @entry, :confirm => "Are you sure you want to destroy this entry?", :method => :delete
      - if manager?
        |
        - if @entry.approved?
          = link_to 'Unapprove', approve_entry_path(@entry, :entry => { :approved => false }), :method => :post
        - else
          = link_to 'Approve', approve_entry_path(@entry, :entry => { :approved => true }), :method => :post
  
%small
  Added by 
  = link_to @entry.user.name, @entry.user
  = "on #{@entry.created_at.strftime('%B %d, %Y @ %l:%M %p')}."

%table.table.table-bordered.glossary-entry
  %thead
    %tr
      - @base_languages.each do |lang|
        %th=I18n.t(lang.to_s).capitalize
  %tbody
    %tr
      - @base_languages.each do |lang|
        - Globalize.with_locale(lang) do
          %td= @entry.term
%table.table.table-bordered.usage-info
  %thead
    %tr
      %th Usage information
  %tbody
    %tr
      %td= auto_link(simple_format(@entry.info))
- if logged_in?
  %table.table.table-bordered.translator-notes
    %thead
      %tr
        %th Translator notes
    %tbody
      %tr
        %td= auto_link(simple_format(@entry.note))
