- title (page_title = "Edit entry")
.page-header
  %h1
    = page_title

= twitter_bootstrap_form_for @entry, :html => { :class => 'form-horizontal' } do |entry|
  = render 'form', :entry => entry
  = entry.actions do
    = entry.submit 'Save'
    = button_tag 'Cancel', :type => 'reset', :class => 'btn'
