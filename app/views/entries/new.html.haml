- title (page_title = "Add new entry")
.page-header
  %h1
    = page_title

= twitter_bootstrap_form_for @entry, :html => { :class => 'form-horizontal' } do |entry|
  = render 'form', :entry => entry
  = entry.actions do
    = entry.submit 'Add entry'
    = link_to 'Cancel', homepage_path, :class => 'btn'
