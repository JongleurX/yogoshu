- title (page_title = I18n.t('ui.add_entry_header'))
.page-header
  %h1
    = page_title

= twitter_bootstrap_form_for @entry, :html => { :class => 'form-horizontal' } do |entry|
  = render 'form', :entry => entry
  = entry.actions do
    = entry.submit I18n.t('ui.add_entry')
    = link_to I18n.t('ui.cancel'), homepage_path, :class => 'btn'
