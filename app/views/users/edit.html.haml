- title (page_title = I18n.t('ui.users_edit', :user => @user.name))
.page-header
  %h1
    = page_title

= twitter_bootstrap_form_for @user, :html => { :class => 'form-horizontal' } do |user|
  = render 'form', :user => user
  = user.actions do
    = user.submit I18n.t('ui.save_entry')
    = link_to I18n.t('ui.cancel'), @user, :class => 'btn'
