$num_langs: <%= Yogoshu::Locales.base_languages.length %>;

table.bordered-table {
  &.entries-list {
    width: 100%;
    th { 
      background: none repeat scroll 0 0 #FAFAF0;
      text-align: center;
    }
    .col-index { background-color: #F0F0F0; width: 2% }
    &.logged-out {
      .col-term { width: (98% / $num_langs); }
    }
    &.logged-in {
      .col-added_by { width: 12%; }
      .col-status { width: 12%; }
      &.contributor {
        .col-term { width: (76% / $num_langs); }
      }
      &.manager {
        .col-term { width: (64% / $num_langs); }
        .col-actions { width: 10%; }
      }
    } 
  }
}

.search-terms-box {
  padding: 10px 2px;
}
